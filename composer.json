{
    "name": "yashamuru/test_secret_santa",
    "description": "A secret santa game",
    "require": {
        "php": "^7.0",
        "fzaninotto/faker": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "SecretSanta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": [
            "phpunit --configuration phpunit.xml"
        ],
        "play": [
            "php index.php"
        ]
    }
}
